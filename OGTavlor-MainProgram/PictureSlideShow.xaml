<Window x:Class="OGTavlor_MainProgram.PictureSlideShow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:OGTavlor_MainProgram"
        mc:Ignorable="d"
        Loaded="PictureSlideShow_Loaded"
        Title="Bildspel" Height="529.478" Width="700" ResizeMode="NoResize" WindowStartupLocation="CenterScreen">
    <Window.Background>
        <LinearGradientBrush EndPoint="0.5,0" StartPoint="0.5,1">
            <GradientStop Color="White" Offset="1"/>
            <GradientStop Color="#FFEE9C0C"/>
        </LinearGradientBrush>
    </Window.Background>

    <Grid>

        <DockPanel VerticalAlignment="Top">

            <Menu DockPanel.Dock="Top">

                <MenuItem Header="_File">

                    <MenuItem Header="_Ny tavla" Click="LäggTillKonstverk_Click"></MenuItem>

                    <Separator/>

                    <MenuItem Header="_Exit" Command="Close"></MenuItem>

                </MenuItem>

                <MenuItem Header="Bildspel">

                    <MenuItem Header="Intervall">

                        <MenuItem x:Name="Interval1" Header="1" IsCheckable="True" Click="Interval1_OnClick"></MenuItem>

                        <MenuItem x:Name="Interval2" Header="2" IsCheckable="True" Click="Interval2_OnClick"></MenuItem>

                        <MenuItem x:Name="Interval3" Header="3" IsCheckable="True" Click="Interval3_OnClick"></MenuItem>

                    </MenuItem>

                </MenuItem>

            </Menu>

        </DockPanel>



        <Image x:Name="ImgSlideShow" Margin="10,23,10,35" RenderTransformOrigin="0.491,0.491">

            <Image.ContextMenu>

                <ContextMenu>

                    <MenuItem Header="Redigera Tavlan" Click="EditArtwork"></MenuItem>

                </ContextMenu>

            </Image.ContextMenu>

        </Image>

        <Button x:Name="BtnPrevious" Content="Föregående bild" FontWeight="SemiBold" HorizontalAlignment="Left" Margin="10,456,0,0" VerticalAlignment="Top" Width="106" Click="PreviousPicture" Height="25">
            <Button.Background>
                <SolidColorBrush Color="#FFFBFBFB"/>
            </Button.Background>
        </Button>

        <Button x:Name="BtnMainWindow" Content="Startsida" FontWeight="SemiBold" HorizontalAlignment="Left" Margin="312,456,0,0" VerticalAlignment="Top" Width="75" Click="btnMainWindow_Click" Height="25">
            <Button.Background>
                <SolidColorBrush Color="#FFFBFBFB"/>
            </Button.Background>
        </Button>

        <Button x:Name="BtnNext" Content="Nästa bild" HorizontalAlignment="Left" FontWeight="SemiBold" Margin="567,456,0,0" VerticalAlignment="Top" Width="106" Click="NextPicture" Height="25">
            <Button.Background>
                <SolidColorBrush Color="#FFFBFBFB"/>
            </Button.Background>
        </Button>

        <Button x:Name="StopSlide" Content="Stoppa bildspelet" HorizontalAlignment="Left" FontWeight="SemiBold" Margin="392,456,0,0" VerticalAlignment="Top" Width="110" Click="StopSlideShow" Height="25">
            <Button.Background>
                <SolidColorBrush Color="#FFFBFBFB"/>
            </Button.Background>
        </Button>

        <Button x:Name="StartSlide" Content="Starta bildspelet" HorizontalAlignment="Left" FontWeight="SemiBold" Margin="205,456,0,0" VerticalAlignment="Top" Width="102" Click="StartSlideShow" Height="25">
            <Button.Background>
                <SolidColorBrush Color="#FFFBFBFB"/>
            </Button.Background>
        </Button>

    </Grid>

</Window>
